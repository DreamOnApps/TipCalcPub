#: import FadeTransition kivy.uix.screenmanager.FadeTransition
WindowManager:
    transition: FadeTransition()
    MainScreen:
    TipCalcScreen:
    HelpScreen:




# Different Screens_____________________________________________________________________________________________________
<MainScreen>:
    name: "home"
    HomeGridLayout:

<TipCalcScreen>:
    name: "tip_calc"
    TipCalcGridLayout:

<HelpScreen>:
    name: "help_screen"
    HelpGridLayout:



# Default Button________________________________________________________________________________________________________

<CustButton@Button>:
    font_size: 32
# Home__________________________________________________________________________________________________________________

<HomeGridLayout>:
    rows: 4
    padding: 10
    spacing: 10

    BoxLayout:
        CustButton:
            text: "Welcome to Tip Calculator Click to Continue"
            on_release: app.root.current = "tip_calc"
    BoxLayout:
        CustButton:
            text: "Help"
            on_release: app.root.current = "help_screen"
        CustButton:
            text: "Exit App"
            on_press: app.stop()



# Tip Calculator________________________________________________________________________________________________________

<TipCalcGridLayout>:
    id: tip_calculator
    display: entry
    rows: 10
    padding: 10
    spacing: 10

    BoxLayout:
        Label:
            font_size: 40
            text: "Tip Calculator"
    BoxLayout:
        TextInput:
            id: entry
            font_size: 50
            size_hint_y: 1.125
            multiline: False

    BoxLayout:
        spacing: 10
        CustButton:
            text: "7"
            on_press: entry.text += self.text
        CustButton:
            text: "8"
            on_press: entry.text += self.text
        CustButton:
            text: "9"
            on_press: entry.text += self.text



    BoxLayout:
        spacing: 10
        CustButton:
            text: "4"
            on_press: entry.text += self.text
        CustButton:
            text: "5"
            on_press: entry.text += self.text
        CustButton:
            text: "6"
            on_press: entry.text += self.text


    BoxLayout:
        spacing: 10
        CustButton:
            text: "1"
            on_press: entry.text += self.text
        CustButton:
            text: "2"
            on_press: entry.text += self.text
        CustButton:
            text: "3"
            on_press: entry.text += self.text


    BoxLayout:
        spacing: 10
        CustButton:
            text: "AC"
            on_press: entry.text = ""
        CustButton:
            text: "0"
            on_press: entry.text += self.text
        CustButton:
            text: "%"
            on_press: entry.text += self.text


    BoxLayout:
        spacing: 10
        CustButton:
            text: "."
            on_press: entry.text += self.text
        CustButton:
            text: "Del"
            on_press: entry.text = entry.text[:-1]
        CustButton:
            text: "="
            on_press: tip_calculator.tip_calc(entry.text)


    BoxLayout:
        spacing: 10

        CustButton:
            text: "Tip + Bill"
            on_release: tip_calculator.plus_bill(entry.text)

        CustButton:
            text: "Bill"
            on_release: tip_calculator.bill(entry.text)

        CustButton:
            text: "Tip ="
            on_release: tip_calculator.tip(entry.text)

# Home Screen Button TipCalc____________________________________________________________________________________________
    BoxLayout:
        CustButton:
            text: "Home"
            on_release: app.root.current = "home"




# Help Screen___________________________________________________________________________________________________________
<HelpGridLayout>:
    id: help_window
    rows: 3
    padding: 10
    spacing: 10
    multiline: True
    BoxLayout:
        Label:
            text: "To use properly > > >\nDo not use decimals as your tip.\nExample: 100$ % 10 = 10$\nbut 100$ % .1 = 0.10 Cents"
            size_hint: None, None
            size: self.texture_size

    BoxLayout:
        Label:
            text: "Contact info > > >\nIf You have anymore questions or suggestions \nplease contact dreamonapps@gmail.com\nThis Email is Cap Sensitive"
            size_hint: None, None
            size: self.texture_size

    BoxLayout:
        CustButton:
            text: "Home"
            on_release: app.root.current = "home"

        CustButton:
            text: "Exit App"
            on_press: app.stop()
